<script type="text/javascript">
    function initEmbeddedMessaging() {
        try {
            embeddedservice_bootstrap.settings.language = 'en_US'; // Set language

            embeddedservice_bootstrap.init(
                '00Ddw0000007iNh',
                'GitHub',
                'https://capeunionmart--dev.sandbox.my.site.com/ESWGitHub1739262684971',
                {
                    scrt2URL: 'https://capeunionmart--dev.sandbox.my.salesforce-scrt.com'
                }
            );
        } catch (err) {
            console.error('Error loading Embedded Messaging:', err);
        }
    }
</script>

<!-- Load Salesforce script and initialize -->
<script type="text/javascript" 
    src="https://capeunionmart--dev.sandbox.my.site.com/ESWGitHub1739262684971/assets/js/bootstrap.min.js" 
    onload="initEmbeddedMessaging()">
